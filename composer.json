{
  "name": "yuwaprasart/queue-system",
  "description": "Hospital Queue Management System for Yuwaprasart Waithayopathum Hospital",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Yuwaprasart Hospital",
      "email": "admin@yuwaprasart.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-curl": "*",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "firebase/php-jwt": "^6.8",
    "google/cloud-text-to-speech": "^1.7",
    "intervention/image": "^2.7",
    "league/csv": "^9.10",
    "mike42/escpos-php": "^4.0",
    "monolog/monolog": "^3.4",
    "mpdf/mpdf": "^8.2",
    "nesbot/carbon": "^2.69",
    "phpmailer/phpmailer": "^6.8",
    "ramsey/uuid": "^4.7",
    "telegram-bot/api": "^2.3",
    "vlucas/phpdotenv": "^5.5"
  },
  "suggest": {
    "ext-zip": "Required for Excel file operations and backup compression",
    "phpoffice/phpspreadsheet": "For Excel file generation and processing",
    "aws/aws-sdk-php": "For AWS cloud storage integration",
    "microsoft/azure-storage-blob": "For Azure blob storage integration"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.3",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "friendsofphp/php-cs-fixer": "^3.22",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "YuwaQueue\\": "src/",
      "YuwaQueue\\Tests\\": "tests/"
    },
    "files": ["config/config.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "YuwaQueue\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "analyse": "phpstan analyse src --level=8",
    "cs-check": "phpcs src --standard=PSR12",
    "cs-fix": "phpcbf src --standard=PSR12",
    "quality": ["@cs-check", "@analyse", "@test"],
    "install-optional": [
      "@composer require phpoffice/phpspreadsheet --ignore-platform-req=ext-zip || echo 'PhpSpreadsheet skipped - zip extension not available'",
      "@composer require aws/aws-sdk-php || echo 'AWS SDK skipped'",
      "@composer require microsoft/azure-storage-blob || echo 'Azure SDK skipped'"
    ],
    "post-install-cmd": [
      "@php -r \"if (!extension_loaded('zip')) { echo 'Warning: ZIP extension not found. Some features may be limited.\\n'; }\"",
      "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); echo '.env file created from example\\n'; }\""
    ],
    "check-requirements": ["@php scripts/check-system-requirements.php"]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    },
    "platform-check": false
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "optional-extensions": ["ext-zip", "ext-imagick", "ext-redis"]
  }
}
