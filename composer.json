{
  "name": "yuwaprasart/queue-system",
  "description": "Hospital Queue Management System for Yuwaprasart Waithayopathum Hospital",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Hospital Development Team",
      "email": "dev@yuwaprasart.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-fileinfo": "*",
    "ext-gd": "*",
    "phpmailer/phpmailer": "^6.8",
    "firebase/php-jwt": "^6.8",
    "mpdf/mpdf": "^8.2",
    "phpoffice/phpspreadsheet": "^1.29",
    "monolog/monolog": "^3.4",
    "vlucas/phpdotenv": "^5.5",
    "ramsey/uuid": "^4.7",
    "league/csv": "^9.10",
    "intervention/image": "^2.7",
    "guzzlehttp/guzzle": "^7.8",
    "symfony/console": "^6.3",
    "symfony/process": "^6.3",
    "nesbot/carbon": "^2.69",
    "respect/validation": "^2.2",
    "twig/twig": "^3.7",
    "league/flysystem": "^3.15",
    "predis/predis": "^2.2",
    "pusher/pusher-php-server": "^7.2",
    "google/cloud-text-to-speech": "^1.7",
    "aws/aws-sdk-php": "^3.281",
    "microsoft/azure-storage-blob": "^1.5",
    "telegram-bot/api": "^2.3",
    "linebot/linebot-sdk": "^9.0",
    "twilio/sdk": "^7.9",
    "stripe/stripe-php": "^10.15",
    "league/oauth2-client": "^2.7",
    "spatie/image-optimizer": "^1.7",
    "league/commonmark": "^2.4",
    "doctrine/dbal": "^3.6",
    "psr/log": "^3.0",
    "psr/cache": "^3.0",
    "psr/http-message": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.3",
    "mockery/mockery": "^1.6",
    "fakerphp/faker": "^1.23",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "friendsofphp/php-cs-fixer": "^3.22",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^6.3",
    "filp/whoops": "^2.15",
    "league/factory-muffin": "^3.3",
    "phpspec/phpspec": "^7.4",
    "behat/behat": "^3.13",
    "codeception/codeception": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "App\\Models\\": "src/Models/",
      "App\\Controllers\\": "src/Controllers/",
      "App\\Services\\": "src/Services/",
      "App\\Helpers\\": "src/Helpers/",
      "App\\Middleware\\": "src/Middleware/",
      "App\\Exceptions\\": "src/Exceptions/"
    },
    "files": ["config/config.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse src",
    "cs-check": "php-cs-fixer fix --dry-run --diff",
    "cs-fix": "php-cs-fixer fix",
    "security-check": "composer audit",
    "post-install-cmd": ["@php -r \"file_exists('.env') || copy('.env.example', '.env');\""],
    "post-update-cmd": ["@php scripts/clear-cache.php"],
    "setup": ["@composer install", "@php scripts/setup-database.php", "@php scripts/seed-data.php"],
    "deploy": [
      "@composer install --no-dev --optimize-autoloader",
      "@php scripts/optimize.php",
      "@php scripts/migrate.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  }
}
