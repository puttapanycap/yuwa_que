# Database Configuration
DB_HOST=localhost
DB_NAME=yuwaprasart_queue
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Core Application Configuration (Environment Only)
BASE_URL=http://localhost/yuwa_que
APP_DEBUG=true
APP_TIMEZONE=Asia/Bangkok

# Security Configuration (Environment Only)
JWT_SECRET=your-super-secret-jwt-key-here
CSRF_TOKEN_NAME=csrf_token
SESSION_LIFETIME=3600

# File Upload Configuration (Environment Only)
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_AUDIO_TYPES=mp3,wav,ogg

# System Paths (Environment Only)
LOG_PATH=logs
CACHE_PATH=cache
BACKUP_PATH=backups

# Mobile API Configuration (Environment Only)
MOBILE_API_ENABLED=true
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=60

# Logging Configuration (Environment Only)
LOG_LEVEL=info
LOG_MAX_FILES=30

# Cache Configuration (Environment Only)
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600

# Development/Debug (Environment Only)
QUERY_LOG_ENABLED=false
PERFORMANCE_MONITORING=false

# Multi-Hospital Support (Environment Only)
MULTI_HOSPITAL_ENABLED=false
DEFAULT_HOSPITAL_ID=1

